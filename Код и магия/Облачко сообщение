ctx.quadraticCurveTo(x / 2, CLOUD_HEIGHT / 2, x, CLOUD_HEIGHT);
  ctx.quadraticCurveTo(CLOUD_WIDTH / 4, CLOUD_HEIGHT + CLOUD_HEIGHT * 0.02, CLOUD_WIDTH / 2 - TAIL_WIDTH, CLOUD_HEIGHT + CLOUD_HEIGHT * 0.02);
  ctx.quadraticCurveTo(CLOUD_WIDTH / 2 - TAIL_WIDTH * 2, CLOUD_HEIGHT + CLOUD_HEIGHT * 0.03, CLOUD_WIDTH / 2 - TAIL_WIDTH * 3, CLOUD_HEIGHT + CLOUD_HEIGHT * 0.05);
  ctx.quadraticCurveTo(CLOUD_WIDTH / 2 + TAIL_WIDTH * 3, CLOUD_HEIGHT + CLOUD_HEIGHT * 0.03, CLOUD_WIDTH / 2 + TAIL_WIDTH, CLOUD_HEIGHT + CLOUD_HEIGHT * 0.02);
  ctx.quadraticCurveTo(CLOUD_WIDTH / 2 + CLOUD_WIDTH / 4, CLOUD_HEIGHT + CLOUD_HEIGHT * 0.02, CLOUD_WIDTH, CLOUD_HEIGHT);
  ctx.quadraticCurveTo(x / 2 + CLOUD_WIDTH, CLOUD_HEIGHT / 2, CLOUD_WIDTH, y);
  ctx.quadraticCurveTo(CLOUD_WIDTH / 2, y / 2, x, y);
